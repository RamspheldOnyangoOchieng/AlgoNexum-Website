{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.html", "src/**/*.css"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
